<html>
  <body>
    <form method="POST" action="/messages/new">
      <h1>New Message</h1>
      <label for="author">Author's Name</label>
      <input
        type="text"
        name="author"
        id="author"
        placeholder="Name"
        required
      />
      <label for="author">Message</label>
      <input
        type="text"
        name="message"
        id="message"
        placeholder="Enter message..."
        required
      />
      <button type="submit">Send</button>
    </form>
  </body>
</html>
